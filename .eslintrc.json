{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "plugins": [
    "prettier",
    "react-hooks"
  ],
  "rules": {
    "no-console": 0,
    "no-debugger": 1,
    "no-unused-vars": 1,
    "react/no-unescaped-entities": 0,
    "react/prop-types": 0,
    "react/display-name": 1,
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false
      }
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "settings": {
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",
      "version": "^16.6.3"
    }
  }
}